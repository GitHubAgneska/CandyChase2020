{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/spec",

        "allowJs": true,
        
        "types": [
            "jest", "jasmine", "node"
        ],
        "module": "commonjs"
    },
    "files": ["polyfills.ts"],
    "include": ["**/*.spec.ts", "**/*.d.ts"],

    // ++ 
    "baseUrl": "../src",
    "paths": {
        "@app/*": [ "app/*" ],
        "@assets/*": [ "assets/*" ],
        "@env": [ "environments/environment" ],
        "@pages/*": [ "pages/*" ],
        "@services/*": [ "services/*" ],
        "@tests/*": [ "./*" ],
        "@theme/*": [ "theme/*" ]
    }
}
